generator client {
  provider = "prisma-client-js"
}

 datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
 id Int @id @default(autoincrement())
 name String
 phoneNumber String @unique
 email String @unique
 password String
 confirmPassword String 
 photo String?
 about String?
 qualification String []
 school String []
 cv String?
 posts Posts []
 comments Comment []
 jobs Jobs[]
 messages Messaging []
 applications applyForJob []
 createdAt DateTime @default(now())
}

model Posts{
  id Int @id @default(autoincrement())
  text String
  user Users @relation(fields: [userId],references: [id])
  userId Int
  comments Comment []
  createAt DateTime @default(now())
  
}

model Comment{
  id Int @id @default(autoincrement())
  text String
  post Posts @relation(fields: [postId],references: [id])
  user Users @relation(fields: [userId],references: [id])
  userId Int
  postId Int
  createdAt DateTime
}

model Jobs{
  id Int @id @default(autoincrement())
  company String
  summary String
  photo String? 
  jobDetails String
  email String?
  status Boolean @default(true)
  user Users @relation(fields: [userId], references: [id])
  userId Int
  appplications applyForJob []
  createdAt DateTime @default(now())
}

model applyForJob{
  id Int @id @default(autoincrement())
  coverLetter String?
  linkedin String?
  experience Int @default(0)
  quoteSalary Int @default(0)
  cv String
  job Jobs @relation(fields: [jobId],references: [id])
  user Users @relation(fields: [userId],references: [id])
  userId Int
  jobId Int
  createdAt DateTime @default(now())

}

model Messaging{
  id Int @id @default(autoincrement())
  text String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime

}

model Notification{
  id Int @id @default(autoincrement())
  text String
  createdAt DateTime
}